{
  "name": "match3op",
  "version": "1.0.0",
  "description": "A Phaser.js-powered Match-3 puzzle game for WebView environments",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "build:prod": "npm run clean && tsc && npm run copy:assets && npm run copy:html",
    "dev": "tsc --watch",
    "serve": "http-server dist -p 8080 -c-1",
    "serve:prod": "http-server dist -p 3002 -c-1",
    "server": "node server.js",
    "demo": "node dist/index.js",
    "test": "jest",
    "test:interactive": "npm run build && node dist/test.js",
    "test:watch": "jest --watch",
    "clean": "rm -rf dist",
    "copy:assets": "cp -r assets dist/ || true",
    "copy:html": "cp index.html dist/",
    "deploy:prepare": "npm run build:prod",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts"
  },
  "keywords": [
    "match3",
    "phaser",
    "game",
    "puzzle",
    "webview",
    "typescript"
  ],
  "author": "Match3 Developer",
  "license": "MIT",
  "dependencies": {
    "express": "^5.1.0",
    "phaser": "^3.80.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "http-server": "^14.1.1",
    "jest": "^29.0.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
